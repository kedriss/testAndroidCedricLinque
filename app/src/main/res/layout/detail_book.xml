<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">


        <TextView
            android:id="@+id/titleDetailBook"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre du libre"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/CoverImageDetail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher"
            android:layout_centerInParent="true"
            android:layout_below="@id/titleDetailBook"/>

        <TextView
            android:id="@+id/PrixDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix : 33 €"
            android:layout_below="@+id/CoverImageDetail"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/SynopsisDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PrixDetail"
            android:text="Synopsis"/>
        <TextView
            android:id="@+id/codeISBN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ISBN : 33 €"
            android:layout_below="@+id/SynopsisDetail"
            android:layout_alignParentStart="true" />

</RelativeLayout>
    </ScrollView>